<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <EditText
            android:id="@+id/name_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text=""
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <EditText
            android:id="@+id/kat_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text=""
            android:layout_below="@+id/id_text" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <EditText
            android:id="@+id/id_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text=""
            android:layout_below="@+id/name_text" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <Button
            android:id="@+id/dialogButtonOK"
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:text=" Ok "
            android:layout_marginRight="122dp"
            android:layout_marginEnd="122dp"
            android:layout_below="@+id/kat_text" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

</RelativeLayout>